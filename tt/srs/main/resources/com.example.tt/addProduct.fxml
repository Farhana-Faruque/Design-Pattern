<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="518.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tt.controller.AddProductController">
   <children>
      <Label alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="66.0" prefWidth="600.0" style="-fx-background-color: #520467;" text="Add/Delete Product" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="24.0" />
         </font>
      </Label>

      <Label layoutX="14.0" layoutY="80.0" text="Name:" />
      <TextField fx:id="nameField" layoutX="100.0" layoutY="80.0" prefWidth="150.0" />
      <Label layoutX="264.0" layoutY="80.0" text="Price:" />
      <TextField fx:id="priceField" layoutX="310.0" layoutY="80.0" prefWidth="100.0" />
      <Label layoutX="414.0" layoutY="80.0" text="Amount:" />
      <TextField fx:id="amountField" layoutX="480.0" layoutY="80.0" prefWidth="100.0" />

      <TableView fx:id="productTable" layoutX="14.0" layoutY="120.0" prefHeight="320.0" prefWidth="572.0">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
         </columns>
      </TableView>

      <Label fx:id="totalAmountLabel" layoutX="14.0" layoutY="460.0" text="Total Amount: $0.00" />

      <Button fx:id="addBtn" layoutX="148.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleAddProduct" prefHeight="25.0" prefWidth="115.0" style="-fx-background-color: #520479;" text="Add Product" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteBtn" layoutX="290.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleDeleteProduct" prefHeight="31.0" prefWidth="135.0" style="-fx-background-color: #520479;" text="Delete Product" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font>
      </Button>
      <Button fx:id="backBtn" layoutX="445.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="25.0" prefWidth="115.0" style="-fx-background-color: #520479;" text="Back" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
