<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="518.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tt.controller.CustomerListController">
    <children>
        <Label alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="66.0" prefWidth="600.0" style="-fx-background-color: #520467;" text="Customer List" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="customerTable" layoutX="14.0" layoutY="80.0" prefHeight="380.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="150.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="260.0" text="Name" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
            </columns>
        </TableView>
        <Button fx:id="addBtn" layoutX="31.0" layoutY="479.0" mnemonicParsing="false" onAction="#handleAddCustomer" prefHeight="31.0" prefWidth="151.0" style="-fx-background-color: #520479;" text="Add Customer" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="14.0" />
            </font>
        </Button>
        <Button fx:id="searchBtn" layoutX="232.0" layoutY="479.0" mnemonicParsing="false" onAction="#handleSearchCustomer" prefHeight="31.0" prefWidth="165.0" style="-fx-background-color: #520479;" text="Search Customer" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="14.0" />
            </font>
        </Button>
        <Button fx:id="backBtn" layoutX="445.0" layoutY="479.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="25.0" prefWidth="115.0" style="-fx-background-color: #520479;" text="Back" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
