<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dp_pro.HelloController" prefHeight="400.0" prefWidth="600.0">
    <children>
        <GridPane layoutX="87.0" layoutY="39.0" prefHeight="126.0" prefWidth="384.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Name" textFill="#053841" wrapText="true" />
                <Label text="Email" textFill="#084053" wrapText="true" GridPane.rowIndex="1" />
                <Label text="Password" textFill="#031f3a" wrapText="true" GridPane.rowIndex="2" />

                <TextField fx:id="NameField" prefHeight="35.0" prefWidth="192.0" GridPane.columnIndex="1" />
                <TextField fx:id="EmailField" prefHeight="35.0" prefWidth="192.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <PasswordField fx:id="PasswordField" prefHeight="35.0" prefWidth="192.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <Button layoutX="227.0" layoutY="269.0" prefHeight="25.0" prefWidth="135.0"
                text="Log In" onAction="#onLogInButtonClick" />

        <Label fx:id="welcomeText" layoutX="170.0" layoutY="320.0" text="" />
    </children>
</AnchorPane>
